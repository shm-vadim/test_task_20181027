{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
<h1>Transaction index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>AddTime</th>
            <th>CompanyTicker</th>
            <th>SharesCount</th>
            <th>Money</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for transaction in transactions %}
        <tr>
            <td>{{ transaction.id }}</td>
            <td>{{ transaction.addTime ? transaction.addTime|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ transaction.companyTicker }}</td>
            <td>{{ transaction.sharesCount }}</td>
            <td>{{ transaction.money }}</td>
            <td>
                <a href="{{ path('transaction_show', {'id': transaction.id}) }}">show</a>
                <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('transaction_new') }}">Create new</a>
{% endblock %}